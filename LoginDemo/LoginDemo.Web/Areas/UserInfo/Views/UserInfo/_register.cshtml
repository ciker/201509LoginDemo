@{
    Layout = "~/Views/Shared/_ArealayoutView.cshtml";
}
@model LoginDemo.Entity.UserAccount.UserInfo
    sss
@section content{
    <form class="form-inline">
        <div>
            <dl class="input-group">
                <dt class="input-group-addon">用户名:</dt>
                <dd>@Html.TextBoxFor(a => a.Account, new { required = "true", maxlength = "30", @class = "form-control" })</dd>
            </dl>
            <dl class="input-group">
                <dt class="input-group-addon">密&nbsp;&nbsp;&nbsp;码:</dt>
                <dd>@Html.PasswordFor(a => a.Password, new { @class = "form-control", required = "true", maxlength = "30" })</dd>
            </dl>
            <dl class="input-group">
                <dt class="input-group-addon">公&nbsp;&nbsp;&nbsp;司:</dt>
                <dd>@Html.TextBoxFor(a => a.CompanyName, new { @class = "form-control", required = "true", maxlength = "50" })</dd>
            </dl>

            <dl class="input-group">
                <dt class="input-group-addon">地&nbsp;&nbsp;&nbsp;址:</dt>
                <dd>@Html.TextBoxFor(a => a.Address, new { @class = "form-control", required = "true", maxlength = "50" }) </dd>
            </dl>
            <dl class="input-group">
                <dd><button type="button" class="btn btn-primary register">注册</button><span>已有账号</span><a class="btn btn-success" href="/UserInfo/UserInfo/Login">去登录</a></dd>
            </dl>
        </div>

    </form>
}

@section scripts{
    <script src="~/Scripts/userInfo/register.js"></script>
}