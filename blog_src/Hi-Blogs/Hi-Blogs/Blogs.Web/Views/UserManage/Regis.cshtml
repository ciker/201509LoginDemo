    function OnBegin(obj) {
        $(".button").attr("disabled", true);
    }

    function OnComplete() {
        if ($(".alertMess").html()) {
            $(".button").attr("disabled", false);
        }
    }

    function OnSuccess(obj) {
        if (ShowAjaxResult(obj, ".alertMess")) {
            //$.getJSON()
        }
    }

    function OnFailure() {
    }
</script>
